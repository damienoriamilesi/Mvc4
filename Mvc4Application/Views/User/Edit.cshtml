@model DataAccess.User
@{
    ViewBag.Title = "Update";
}
<h2>
    Add</h2>
@using (Html.BeginForm("update", "user"))
{

    <table>
        <tr>
            <td>@Html.LabelFor(m => m.Name)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Address1)
            </td>
            <td>
                @Html.TextAreaFor(m => m.Address1)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Address2)
            </td>
            <td>
                @Html.TextAreaFor(m => m.Address2)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.BirthDate)
            </td>
            <td>
                @Html.TextBoxFor(m => m.BirthDate)
            </td>
        </tr>
        <tr>
            <td>
                @Html.HiddenFor(m => m.Id)
            </td>
            <td>
                <input type="submit" name="name" value="Submit" />
            </td>
        </tr>
    </table>
}